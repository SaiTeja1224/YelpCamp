<% layout("layouts/boilerplate") -%>
<div class="row mb-3">
  <div class="col-lg-6 col-12 offset-lg-3">
    <div class="card shadow">
      <div class="card-img-top h-25">
        <img
          src="https://images.unsplash.com/photo-1455763916899-e8b50eca9967?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
          alt=""
        />
      </div>
      <div class="card-body">
        <h2 class="text-start card-title mb-3">Register</h2>
        <form
          class="validation-form"
          action="/register"
          method="post"
          novalidate
        >
          <div class="form-group mb-3">
            <label for="username" class="form-label">Enter an username</label>
            <input
              type="text"
              name="register[username]"
              id="username"
              class="form-control"
              required
              autocomplete="off"
              autofocus
            />
            <div class="invalid-feedback">Please enter a valid username</div>
          </div>
          <div class="form-group mb-3">
            <label for="email" class="form-label">Enter your email </label>
            <input
              type="email"
              name="register[email]"
              id="email"
              class="form-control"
              autocomplete="off"
              required
            />
            <div class="invalid-feedback">Please enter a valid email</div>
          </div>
          <div class="form-group mb-3">
            <label for="password" class="form-label"
              >Enter your password
            </label>
            <input
              type="password"
              name="register[password]"
              id="password"
              class="form-control"
              min="6"
              required
            />
            <div class="invalid-feedback">Please enter a valid password</div>
          </div>
          <div class="d-flex btn-group" role="group" aria-label="Group">
            <button class="btn btn-success col-6 mb-3">Submit</button>
            <a href="/" class="btn btn-danger col-6 mb-3">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
