<% layout("layouts/boilerplate") -%>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="d-flex flex-row-reverse justify-content-between container">
    <img
      class="img-fluid col-md-5 .d-sm-none .d-xs-none"
      src="/img/pen-and-paper.jpg"
      alt=""
      style="max-height: 300px"
    />
    <form
      class="col-md-6 col-12 mt-3 validation-form"
      action="/campgrounds/<%= campground._id %>/?_method=PUT"
      method="POST"
      novalidate
    >
      <div class="form-group mb-3">
        <label class="form-label" for="name"> Name </label>
        <input
          type="text"
          name="campground[name]"
          id="name"
          class="form-control"
          value="<%= campground.name %>"
          required
        />
        <div class="invalid-feedback">Please enter a valid name.</div>
      </div>
      <div class="form-group mb-3">
        <label class="form-label" for="location"> Location </label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          value="<%= campground.location %> "
          required
        />

        <div class="invalid-feedback">
          Please enter a valid campground location.
        </div>
      </div>
      <div class="form-group mb-3">
        <label for="price" class="form-label"> Price </label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            name="campground[price]"
            class="form-control"
            aria-label="price"
            aria-describedby="price-label"
            id="price"
            step="0.1"
            min="0"
            value="<%= campground.price %>"
            required
          />

          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>
      </div>
      <div class="form-group mb-3">
        <label for="description" class="form-label"> Description </label>
        <textarea
          name="campground[description]"
          class="form-control"
          id="description"
          cols="30"
          rows="10"
          required
        >
<%= campground.description %></textarea
        >

        <div class="invalid-feedback">Please enter a valid description.</div>
      </div>
      <div class="d-flex">
        <button class="btn btn-primary mt-3 col-6">Save</button>
        <a
          class="btn btn-danger mt-3 col-6"
          href="/campgrounds/<%= campground._id %>"
          >Cancel</a
        >
      </div>
    </form>
  </div>
</div>
