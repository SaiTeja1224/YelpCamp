<% if (successMessage && successMessage.length) { %>
<div
  class="
    alert alert-success alert-dismissible
    fade
    show
    col-lg-6
    offset-lg-3
    mt-3
  "
  role="alert"
>
  <strong>Success!</strong>
  <%= successMessage %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (failureMessage && failureMessage.length) { %>
<div
  class="
    alert alert-danger alert-dismissible
    fade
    show
    col-lg-6
    offset-lg-3
    mt-3
  "
  role="alert"
>
  <strong>Failure!</strong>
  <%= failureMessage %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
